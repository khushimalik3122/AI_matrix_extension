{
    "name": "my-ai-extension",
    "displayName": "My AI Extension",
    "description": "Your all-in-one AI assistant for VS Code. Features context-aware chat, inline completions, automated testing, refactoring, and more.",
    "version": "1.0.0",
    "publisher": "your-publisher-name",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/my-ai-extension.git"
    },
    "bugs": {
        "url": "https://github.com/your-username/my-ai-extension/issues"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "AI",
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "my-ai-extension.startChat",
                "title": "Start AI Chat"
            },
            {
                "command": "my-ai-extension.generateProject",
                "title": "Generate Project from Blueprint"
            }
        ],
        "configuration": {
            "title": "My AI Extension",
            "properties": {
                "my-ai-extension.general.logLevel": {
                    "type": "string",
                    "enum": [
                        "DEBUG",
                        "INFO",
                        "WARN",
                        "ERROR"
                    ],
                    "default": "INFO",
                    "description": "Sets the logging output level for the extension."
                },
                "my-ai-extension.apiKeys.perplexity": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for Perplexity AI. This will be stored securely.",
                    "markdownDescription": "Your API Key for Perplexity AI. After entering it here, it will be moved to VS Code's secure Secret Storage and this setting will be cleared."
                },
                "my-ai-extension.apiKeys.gemini": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for Google Gemini. This will be stored securely.",
                    "markdownDescription": "Your API Key for Google Gemini. After entering it here, it will be moved to VS Code's secure Secret Storage and this setting will be cleared."
                },
                "my-ai-extension.apiKeys.groq": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for Groq. This will be stored securely.",
                    "markdownDescription": "Your API Key for Groq. After entering it here, it will be moved to VS Code's secure Secret Storage and this setting will be cleared."
                },
                "my-ai-extension.inlineCompletion.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable inline code completions."
                },
                "my-ai-extension.testing.defaultFramework": {
                    "type": "string",
                    "enum": [
                        "jest",
                        "vitest",
                        "mocha",
                        "pytest",
                        "junit"
                    ],
                    "default": "jest",
                    "description": "The default testing framework to use when generating new tests."
                },
                "my-ai-extension.telemetry.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable anonymous usage analytics to help improve the extension."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "release": "npx vsce publish"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.47.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "typescript": "^5.1.6",
        "ts-loader": "^9.4.4",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "@xenova/transformers": "^2.16.1",
        "axios": "^1.5.0",
        "handlebars": "^4.7.8",
        "ignore": "^5.2.4",
        "tree-sitter": "^0.20.0",
        "tree-sitter-java": "^0.20.0",
        "tree-sitter-javascript": "^0.20.0",
        "tree-sitter-python": "^0.20.0",
        "tree-sitter-typescript": "^0.20.0"
    }
}

